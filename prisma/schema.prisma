generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  runs      Run[]
}

model RunCommit {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  sha           String
  branch        String?
  authorName    String?
  authorEmail   String?
  message       String?
  remoteOrigin  String?
  defaultBranch String?

  run Run?

  @@index(fields: [sha], name: "sha")
}

model RunPlatform {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  osName         String?
  osVersion      String?
  browserName    String?
  browserVersion String?

  run Run?
}

model RunInstance {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  spec    String
  groupId String
  claimed Boolean @default(false)

  runId String
  run   Run    @relation(fields: [runId], references: [id])

  result Json?

  @@unique([spec, runId, groupId])
}

model Run {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  groupId   String
  ciBuildId String

  projectId String
  project   Project @relation(fields: [projectId], references: [id])

  platformId String
  platform   RunPlatform @relation(fields: [platformId], references: [id])

  commitId String
  commit   RunCommit @relation(fields: [commitId], references: [id])

  instances RunInstance[]

  @@unique([ciBuildId, projectId])
}
