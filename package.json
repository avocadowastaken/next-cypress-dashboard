{
  "name": "next-cypress-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "dev": "run-p dev:*",
    "dev:next": "next dev",
    "dev:prisma": "prisma generate --watch",
    "build": "run-p build:*",
    "build:next": "prisma generate && next build",
    "build:actions": "ts-node scripts/build-actions.ts",
    "start": "next start",
    "tdd": "jest --watch",
    "test": "jest",
    "checks": "run-p check:*",
    "check:types": "prisma generate && tsc",
    "check:format": "prettier . --check",
    "db:push": "ts-node scripts/db-push.ts"
  },
  "jest": {
    "rootDir": "src",
    "testEnvironment": "node",
    "transform": {
      ".+\\.tsx?$": "esbuild-jest"
    },
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts"
    ]
  },
  "lint-staged": {
    "*": "prettier --write --ignore-unknown"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn checks"
    }
  },
  "dependencies": {
    "@emotion/react": "11.1.5",
    "@emotion/styled": "11.1.5",
    "@material-ui/core": "5.0.0-alpha.25",
    "@material-ui/icons": "5.0.0-alpha.24",
    "@material-ui/lab": "5.0.0-alpha.25",
    "@octokit/core": "3.2.5",
    "@prisma/client": "2.16.1",
    "cookie": "0.4.1",
    "fastify": "3.11.0",
    "formik": "2.2.6",
    "git-url-parse": "11.4.4",
    "next": "10.0.6",
    "next-auth": "3.4.1",
    "pino-colada": "2.1.0",
    "pino-pretty": "4.5.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "superjson": "1.6.2",
    "swr": "0.4.2",
    "yup": "0.32.8"
  },
  "devDependencies": {
    "@actions/core": "1.2.6",
    "@actions/exec": "1.0.4",
    "@actions/github": "4.0.0",
    "@actions/glob": "0.1.1",
    "@mdx-js/loader": "1.6.22",
    "@next/mdx": "10.0.6",
    "@types/cookie": "0.4.0",
    "@types/git-url-parse": "9.0.0",
    "@types/jest": "26.0.20",
    "@types/next-auth": "3.1.24",
    "@types/node": "14.14.26",
    "@types/node-fetch": "2.5.8",
    "@types/pino": "6.3.5",
    "@types/react": "17.0.1",
    "babel-plugin-direct-import": "0.6.3",
    "babel-plugin-superjson-next": "0.2.1",
    "cypress": "6.4.0",
    "dotenv": "8.2.0",
    "esbuild": "0.8.44",
    "esbuild-jest": "0.4.0",
    "husky": "5.0.9",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "next-prisma-plugin": "0.1.1",
    "npm-run-all": "4.1.5",
    "prettier": "2.2.1",
    "prettier-package-json": "2.1.3",
    "prettier-plugin-organize-imports": "1.1.1",
    "prettier-plugin-prisma": "0.3.0",
    "prisma": "2.16.1",
    "ts-node": "9.1.1",
    "typescript": "4.1.5",
    "vercel": "21.2.3",
    "yaml": "1.10.0"
  }
}
